@model UserProfileandPosts
@if(Model == null)
{
    <h2>
        @ViewData["Error"]
    </h2>
}
else
{
    <section class="gradient-custom-2 justify-content-center">
        <div class="container m-2 p-4 justify-content-center" style="height:fit-content;">
            <div class="row d-flex justify-content-center align-items-center" style="height:fit-content;">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card" style="width:650px;">
                        <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                            <div class="ms-4 mt-2 d-flex flex-column" style="width: 150px;">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                     alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                     style="width: 150px; z-index: 1">
                                                                
                            </div>
                            <div class="ms-3" style="margin-top: 75px;">
                                <h5>@Model.UserProfile.Name</h5>
                                <p>@Model.UserProfile.Pronouns</p>
                                <p>@Model.UserProfile.BirthDay</p>
                            </div>
                        </div>
                        <div class="card-body p-4 text-black container justify-content-center align-content-center">
                            <div class="mb-5">
                                <div class="row">
                                    <p class="lead fw-normal mb-1 col col-lg">Bio</p>
                                    <a class="btn btn-outline-dark mx-2 col-md-auto" data-mdb-ripple-color="dark" style="z-index: 1; width:50px;" asp-action="EditProfile" asp-controller="Profile" asp-area="" asp-route-id="@Model.UserProfile.ProfileId">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </div>
                                <div class="p-4 mt-3 row" style="background-color: #444;">
                                    <p class="font-italic mb-1">@Model.UserProfile.Bio</p>
                                </div>

                                <div class="row">
                                    <a class="btn btn-outline-success m-1" style="width:fit-content;" asp-action="AddPost" asp-controller="Post" asp-area="">
                                        <i class="bi bi-plus-square"></i>
                                    </a>
                                </div>
                            </div>            
                            <!--Uploads-->
                            <div class="container justify-content-center align-content-center p-3">
                                <p class="row lead fw-normal mb-2">Uploads</p>
                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        @foreach(Upload p in Model.UploadsFromUser)
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="data:@p.fileType;base64,@Convert.ToBase64String(p.fileContent)" alt="@p.fileUrl">
                                            </div>
                                        }
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            
                            <!--Posts-->
                            <div class="container justify-content-center align-content-center p-3">
                                <p class="row lead fw-normal mb-2">Recent Posts</p>
                                <div class="row container d-flex justify-content-center align-content-center">
                                    @foreach (Post p in Model.PostsForUser)
                                    {
                                        <div class="row my-2" style="background-color:#444; border-color:#222; border-radius:5px; width:fit-content;">
                                            <div class=" my-2 container justify-content-center align-content-center" style="width:fit-content">
                                                <div class="row">
                                                    <p class="col">@Model.UserProfile.Name</p>
                                                    <!-- Default dropright button -->
                                                    <div class="btn-group col col-md-auto">
                                                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Small button
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="btn btn-outline-success mx-1 dropdown-item" style="width:fit-content;" asp-action="EditPost" asp-controller="Post" asp-route-id="@p.PostId">Edit <i class="bi bi-pencil-square"></i></a>
                                                            <a class="btn btn-outline-danger mx-1 dropdown-item" style="width:fit-content;" asp-action="DeletePost" asp-controller="Post" asp-route-id="@p.PostId">Delete <i class="bi bi-trash3"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <hr/>
                                                <partial name="~/Views/Post/_PostPartialView.cshtml" for="@p" class="row" style="width:fit-content" />
                                            </div>
                                        </div>                                        
                                    }
                                </div>
                            </div>
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}