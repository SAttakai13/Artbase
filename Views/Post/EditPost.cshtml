@model Post
@{
    ViewData["Title"] = "Edit Post";
}
<form method="post" asp-controller="Post" asp-action="EditPost">
    <div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="m-2">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" style="width: 450px;" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="m-2">
            <label asp-for="Message"></label>
            <input asp-for="Message" class="form-control" style="width: 450px;" />
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success mt-5" style="width:150px;">Save Post</button>
    <div name="lblMsg" class="text-danger">
        @ViewData["Error"]
    </div>
</form>
