@model Post
@if (Model == null)
{
    <h2></h2>
}
else
{
    <div>
        <div class="mb-2">
            @if (Model.Message != null)
            {
                <h4>@Model.Message</h4>
            }
            else
            {
                <h4></h4>
            }
            <img src="@Model.ImageUrl" alt="Image Not Loaded Properly" style="width:auto;height:450px;" />
        </div>
    </div>
    
}