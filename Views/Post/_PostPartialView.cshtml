@model Post
@if (Model == null)
{
    <h2></h2>
}
else
{
    <div class="col mb-2">
        @if (Model.Message != null)
        {
            <h4>@Model.Message</h4>
        }
        else
        {
            <h4></h4>
        }
        <img src="@Model.ImageUrl" alt=" " style="width:auto;height:450px;" />

    </div>
}